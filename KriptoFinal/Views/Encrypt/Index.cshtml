@{
    ViewData["Title"] = "RSA Şifreleme";
}

<style>
    /* Form elemanları arka plan ve yazı */
    textarea.form-control {
        background: rgba(0, 0, 0, 0.15);
        color: #ffcccc;
        border: 1.5px solid #ff0000;
        border-radius: 6px;
        box-shadow:
            0 0 5px #ff0000aa inset;
        font-family: 'Courier New', monospace;
        transition: border-color 0.3s ease;
    }
    textarea.form-control:focus {
        border-color: #ff4444;
        box-shadow:
            0 0 8px #ff4444 inset;
        background: rgba(0, 0, 0, 0.3);
        color: #fff;
        outline: none;
    }

    label.form-label {
        color: #ff4444;
        font-weight: 600;
        user-select: none;
    }

    /* Kırmızı neon buton */
    .btn-neon-red {
        background: transparent;
        border: 2px solid #ff0000;
        color: #ff0000;
        font-weight: 600;
        padding: 12px 30px;
        border-radius: 8px;
        box-shadow:
            0 0 10px #ff0000,
            0 0 20px #ff4444,
            inset 0 0 10px #ff4444;
        transition: all 0.3s ease;
        cursor: pointer;
        user-select: none;
        font-size: 1.1rem;
    }
    .btn-neon-red:hover,
    .btn-neon-red:focus {
        background: #ff0000;
        color: #222;
        box-shadow:
            0 0 20px #ff0000,
            0 0 40px #ff6666,
            inset 0 0 20px #ff6666;
        text-decoration: none;
        outline: none;
    }

    /* Container stil */
    .container {
        background: rgba(0,0,0,0.15);
        border-radius: 10px;
        box-shadow: 0 0 20px #ff000033 inset;
        padding: 30px;
        color: #ffcccc;
        margin-top: 40px;
    }
</style>

<div class="container py-5">
    <h2 class="text-center mb-4">🛡️ RSA Şifreleme Aracı</h2>
    <p class="text-center text-muted mb-4" style="color: #ff8888;">Genel anahtarı kullanarak metni şifreleyin.</p>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-controller="Encrypt" asp-action="Index" method="post">
                <div class="mb-3">
                    <label for="plainText" class="form-label">Şifrelenecek Metin:</label>
                    <textarea class="form-control" id="plainText" name="plainText" rows="4" required></textarea>
                </div>

                <div class="mb-3">
                    <label for="publicKey" class="form-label">Genel Anahtar (Base64):</label>
                    <textarea class="form-control" id="publicKey" name="publicKey" rows="4" required></textarea>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn-neon-red">RSA ile Şifrele</button>
                </div>
            </form>

            @if (ViewBag.EncryptedText != null)
            {
                <div class="mt-4">
                    <label class="form-label">Şifrelenmiş Veri (Base64):</label>
                    <textarea class="form-control" rows="4" readonly>@ViewBag.EncryptedText</textarea>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bu sayfa sadece metin şifreleme içerdiğinden ekstra JavaScript gerekli değildir. -->
}
